<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="neo4j.client.class">Everyman\Neo4j\Client</parameter>
    </parameters>

    <services>
        <service id="neo4j.client" class="%neo4j.client.class%">
            <argument>%neo4j_client.host%</argument>
            <argument>%neo4j_client.port%</argument>
        </service>
    </services>
</container>